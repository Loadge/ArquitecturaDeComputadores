// gcc -O2 pmtv-secuencial.c -o pmtv-secuencial -lrt

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main(int argc, char **argv){
	int n;
	int i,j;
	struct timespec cgt1,cgt2; double ncgt;
		
	if(argc <2){
		fprintf(stderr, "Falta el tama침o de la matriz cuadrada\n");
		exit(-1);
	}
	n = atoi(argv[1]);

	double **matriz;
	double *vector;
	double *vFinal;

	clock_gettime(CLOCK_REALTIME,&cgt1);
	//Creaci칩n de vectores
	vector = (double*) malloc(n*sizeof(double));
	vFinal  = (double*) malloc(n*sizeof(double));
	//Creaci칩n de matriz
	matriz = (double**) malloc(n*sizeof(double*));

	for(i=0; i<n;i++){matriz[i]=(double*) malloc(n*sizeof(double));}
	
	//Inicializaci칩n
	for(i=0;i<n;i++){
		vector[i]=i;
		vFinal[i] =0;
		for(j=0;j<n;j++){
			if(i>=j){
				matriz[i][j]=i+j;
			}else{
				matriz[i][j]=0;
			}
		}
	}
	/* -- * /
	//Mostrar la matriz
	for(i=0; i < n; i++){
		for(j=0; j < n; j++){
			printf("%f ", matriz[i][j]);
		}
		printf("\n");
	}
	/* -- */
	//Operaciones
	for(i=0;i<n;i++){
		for(j=0;j<n;j++){
			if(i >= j){
				vFinal[i] += matriz[i][j] * vector[j];
			}
		}
	}

	clock_gettime(CLOCK_REALTIME,&cgt2);
	ncgt=	(double) (cgt2.tv_sec-cgt1.tv_sec)+
		(double) ((cgt2.tv_nsec-cgt1.tv_nsec)
		/(1.e+9));

/* -- * /
printf("%f \n", ncgt);
/* -- */

/* -- */
	printf("vFinal[0]=%f /\n vFinal[%d]=%f  /\n",vFinal[0],n,vFinal[n]);

/* -- */

	free(vector);
	free(vFinal);
	free(matriz);
}
